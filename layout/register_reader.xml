<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="#262948">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.8"
                    android:background="#262948">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reader_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="3.4"
                    android:background="@drawable/shape">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:weightSum="11.3">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="3">

                            <ImageView
                                android:id="@+id/logo_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/logo_payable" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:background="@color/white"
                            android:layout_weight="4.9">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8">

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1.4">

                                    <pl.droidsonroids.gif.GifTextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:background="@drawable/blutooth_connect"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8">

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/ccc"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1.4">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="9.5">


                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="9.5">

                                    <TextView
                                        android:id="@+id/textReader"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:minHeight="0dp"
                                        android:textSize="14dp"
                                        android:minWidth="0dp"
                                        android:text="@string/bluetooth_reader"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorPrimary" />
                                </RelativeLayout>


                            </LinearLayout>
                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.8"
                    android:background="#262948">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.5">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>