<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/splitButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"

        android:focusable="true"
        android:drawableLeft="@drawable/split_pay1"
        android:paddingLeft="140dp"
        android:drawablePadding="-120dp"
        android:gravity="center"
        android:text="@string/splitPayment"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/search_bar_bg"
        android:gravity="center"
        android:weightSum="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:weightSum="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/card_payment"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="2.45"
                android:background="@color/search_bar_bg"
                android:drawableTop="@drawable/card"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="45dp"
                android:text="@string/cardBut"
                android:drawablePadding="-40dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:focusable="true" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="@color/colorPrimary" />


            <Button
                android:id="@+id/cash_payment"
                android:layout_width="wrap_content"
                android:layout_weight="2.45"
                android:layout_height="200dp"
                android:background="@color/search_bar_bg"
                android:drawableTop="@drawable/cash"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="45dp"
                android:text="\nCashBut"
                android:drawablePadding="-40dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:focusable="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"/>

    </LinearLayout>

</LinearLayout>