<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="5.0"
            android:background="@drawable/shape">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@color/grid_bg"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.5">

                    <ImageView
                        android:id="@+id/logo_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/warning" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="@string/lowStock"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp" />

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.5"></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/inner"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="5.7">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:weightSum="9.5">

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.8"></RelativeLayout>

                        <LinearLayout
                            android:id="@+id/content1"
                            android:background="@color/white"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="7.9"
                            android:orientation="vertical"
                            android:weightSum="5">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:orientation="vertical"
                                android:weightSum="3">

                                <ListView
                                    android:id="@+id/list"
                                    android:layout_width="match_parent"
                                    android:layout_height="400dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginBottom="50dp"
                                    android:background="@color/white"
                                    android:divider="@color/grid_bg"
                                    android:dividerHeight="5dp"
                                    android:gravity="center" />

                            </LinearLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.8"></RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.3"></RelativeLayout>

                <!--<RelativeLayout-->
                <!--android:id="@+id/space"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0dip"-->
                <!--android:layout_weight="0.5"></RelativeLayout>-->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.8">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:weightSum="9.5">

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:background="@android:color/transparent"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="3.5">

                            <Button
                                android:id="@+id/stockOk_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/round_corner_button"
                                android:text="@string/okBtn"
                                android:textColor="@android:color/white"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"></RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.2">

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>