<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="#262948">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.8"
                    android:background="#262948">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logbox"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="3.4"
                    android:background="@drawable/shape">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:weightSum="13.1">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="3">

                            <ImageView
                                android:id="@+id/logo_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/logo_payable" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1.4">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="9.5">

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:background="@color/grid_bg"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="7.9">

                                    <TextView
                                        android:id="@+id/imeiId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_marginTop="10dp"
                                        android:ems="15"
                                        android:gravity="center"
                                        android:text="@string/imei"
                                        android:textStyle="bold"
                                        android:textCursorDrawable="@null"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/imeiText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/imeiId"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:imeOptions="flagNoExtractUi"
                                        android:ems="15"
                                        android:gravity="center"
                                        android:text="35643645gfdges456gega"
                                        android:textColor="@color/colorPrimary"
                                        android:textCursorDrawable="@null"
                                        android:textSize="14dp" />

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_weight="0.5"></RelativeLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/aaaaa"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.3"
                            android:weightSum="9.5"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.8"></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:background="@color/grid_bg"
                                android:layout_weight="7.9"></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.8"></RelativeLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1.4">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="9.5">

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:background="@color/grid_bg"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="7.9">

                                    <TextView
                                        android:id="@+id/simId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:textColor="@color/colorPrimary"
                                        android:ems="15"
                                        android:gravity="center"
                                        android:text="@string/simSerial"
                                        android:textStyle="bold"
                                        android:textCursorDrawable="@null"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/simText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/simId"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:ems="15"
                                        android:imeOptions="flagNoExtractUi"
                                        android:gravity="center"
                                        android:text="5364365776363464"
                                        android:textColor="@color/colorPrimary"
                                        android:textCursorDrawable="@null"
                                        android:textSize="14dp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bbb"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1.3">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="9.5">

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="7.9">

                                    <EditText
                                        android:id="@+id/bankCode"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/round_corner_edit_text"
                                        android:drawableTint="@android:color/darker_gray"
                                        android:imeOptions="flagNoExtractUi"
                                        android:ems="15"
                                        android:gravity="center"
                                        android:hint="@string/enterBankCode"
                                        android:inputType="textPassword"
                                        android:textCursorDrawable="@null"
                                        android:textSize="15sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/ddd"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1.3">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="9.5">

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="7.9">

                                    <EditText
                                        android:id="@+id/tag"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/round_corner_edit_text"
                                        android:drawableTint="@android:color/darker_gray"
                                        android:ems="15"
                                        android:imeOptions="flagNoExtractUi"
                                        android:gravity="center"
                                        android:hint="@string/enterTag"
                                        android:inputType="textPassword"
                                        android:textCursorDrawable="@null"
                                        android:textSize="15sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ccc"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1.4">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="9.5">

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="3"
                                    android:background="@android:color/transparent"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="3.5">

                                    <Button
                                        android:id="@+id/send_button"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:background="@drawable/round_corner_button"
                                        android:text="@string/send"
                                        android:textColor="@android:color/white" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="3"></RelativeLayout>

                            </LinearLayout>
                        </RelativeLayout>

                        <!--<RelativeLayout-->
                            <!--android:layout_width="fill_parent"-->
                            <!--android:layout_height="0dip"-->
                            <!--android:layout_weight="1">-->

                            <!--<Button-->
                                <!--android:id="@+id/request_button"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_centerHorizontal="true"-->
                                <!--android:layout_centerVertical="true"-->
                                <!--android:background="@android:color/transparent"-->
                                <!--android:minHeight="0dp"-->
                                <!--android:minWidth="0dp"-->
                                <!--android:text="@string/request_reader"-->
                                <!--android:textAllCaps="false"-->
                                <!--android:textColor="#408ed0" />-->

                        <!--</RelativeLayout>-->

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.8"
                    android:background="#262948">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.5">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>