<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/grid_bg"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_gray_back" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/grid_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/itemAssignToCat"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/search"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:ems="10"
                    android:background="@drawable/rounded_edittext"
                    android:hint="@string/searchItems"
                    android:inputType="textPersonName"
                    android:paddingBottom="15sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15sp"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:drawableLeft="@drawable/search"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

            </LinearLayout>


            <ListView
                android:id="@+id/list"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:background="@color/white"
                android:divider="@color/grid_bg"
                android:dividerHeight="5dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:background="@color/grid_bg"
            android:orientation="vertical"></LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/white"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/createCat"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="@string/catName"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:inputType="textPersonName"
                    android:paddingBottom="10sp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10sp"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="left"
                    android:text="@string/catColor"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/col_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_col_1" />


                    <Button
                        android:id="@+id/col_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_col_2" />

                    <Button
                        android:id="@+id/col_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_col_3" />


                    <Button
                        android:id="@+id/col_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_col_4" />

                    <Button
                        android:id="@+id/col_5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_col_5" />


                    <Button
                        android:id="@+id/col_6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_col_6" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corner_button"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="@string/saveCat"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />


                    <Button
                        android:id="@+id/btn_delete"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/ic_red_delete"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>