<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="#262948">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.8"
                    android:background="#262948">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forgetPasswordBox"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="3.4"
                    android:background="@drawable/shape">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:weightSum="11.3">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="4">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_weight="0.4">

                                    <ImageView
                                        android:id="@+id/logo_image_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="122dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/logo_payable" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.6"
                                    android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/textView22"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/changepassword"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_marginTop="10dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>



                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1.3">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="9.5">

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="7.9">

                                    <EditText
                                        android:id="@+id/currentPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/round_corner_edit_text"
                                        android:drawableTint="@android:color/darker_gray"
                                        android:ems="15"
                                        android:gravity="center"
                                        android:hint="@string/currentpassword"
                                        android:inputType="textPassword"
                                        android:textCursorDrawable="@null"
                                        android:textSize="15sp"
                                        android:imeOptions="flagNoExtractUi"/>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_weight="0.5"></RelativeLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/aaaaa"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1.3">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="9.5">

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="7.9">

                                    <EditText
                                        android:id="@+id/newPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/round_corner_edit_text"
                                        android:drawableTint="@android:color/darker_gray"
                                        android:ems="15"
                                        android:gravity="center"
                                        android:hint="@string/newpassword"
                                        android:inputType="textPassword"
                                        android:textCursorDrawable="@null"
                                        android:textSize="15sp"
                                        android:imeOptions="flagNoExtractUi"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bbb"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1.3">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="9.5">

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="7.9">

                                    <EditText
                                        android:id="@+id/reEnterPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/round_corner_edit_text"
                                        android:drawableTint="@android:color/darker_gray"
                                        android:ems="15"
                                        android:gravity="center"
                                        android:hint="@string/reEnterPassword"
                                        android:inputType="textPassword"
                                        android:textCursorDrawable="@null"
                                        android:textSize="15sp"
                                        android:imeOptions="flagNoExtractUi"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.8"></RelativeLayout>

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ccc"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1.4">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"
                                android:weightSum="9.5">

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="3"
                                    android:background="@android:color/transparent"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="3.5">

                                    <Button
                                        android:id="@+id/sign_in_button"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/round_corner_button"
                                        android:text="@string/changepassword"
                                        android:textAllCaps="false"
                                        android:textColor="@android:color/white" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="3"></RelativeLayout>

                            </LinearLayout>
                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.8"
                    android:background="#262948">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.5">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>