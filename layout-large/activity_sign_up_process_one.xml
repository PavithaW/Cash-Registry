<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="SignUpDataBinding">

        <variable
            name="SignUp"
            type="com.cbasolutions.cbapos.viewmodel.SignUpViewModel1" />
        <!--Lets associate one more Variable with this XML-->
        <variable
            name="ModelClickListener"
            type="com.cbasolutions.cbapos.helper.SignUpClickListner1" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="13.5">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="2">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/ic_back_rounded"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="9.5">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:weightSum="21.5">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="9.25">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:weightSum="10">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="3">

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/step1" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/imageView2"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="25sp"
                                    android:textColor="#ffffff"
                                    android:text="@string/keepTrack" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="5">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/cards" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="20dp"
                                    android:visibility="invisible"
                                    android:textSize="10sp"
                                    android:textColor="#ffffff"
                                    android:layout_alignParentBottom="true"
                                    android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod incididunt ut labore et dolore magna aliqua" />

                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:background="@drawable/shape"
                        android:layout_weight="9.25">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:weightSum="10">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1.6"
                                android:background="#408ed0">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="@string/enterDetail"
                                    android:textColor="@android:color/white"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="8.4"
                                android:background="#ffffff">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:orientation="vertical"
                                    android:weightSum="8">

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="1.1"></RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="1.1">

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal"
                                            android:weightSum="9.5">

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="0.8"></RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="7.9">

                                                <EditText
                                                    android:id="@+id/emailEditText"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_centerHorizontal="true"
                                                    android:layout_centerVertical="true"
                                                    android:background="@drawable/round_corner_edit_text"
                                                    android:drawableTint="@android:color/darker_gray"
                                                    android:ems="15"
                                                    android:gravity="center"
                                                    android:hint="@{SignUp.emailHint}"
                                                    android:inputType="textEmailAddress"
                                                    android:text="@={SignUp.userEmail}"
                                                    android:textCursorDrawable="@null"
                                                    android:textSize="15sp"
                                                    app:error="@{SignUp.errorEmail}"
                                                    android:imeOptions="flagNoExtractUi"/>
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="0.8"></RelativeLayout>

                                        </LinearLayout>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="0.5"></RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="1.1">

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal"
                                            android:weightSum="9.5">

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="0.8"></RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="7.9">

                                                <EditText
                                                    android:id="@+id/confirmEmailEditText"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_centerHorizontal="true"
                                                    android:layout_centerVertical="true"
                                                    android:background="@drawable/round_corner_edit_text"
                                                    android:drawableTint="@android:color/darker_gray"
                                                    android:longClickable="false"
                                                    android:ems="15"
                                                    android:gravity="center"
                                                    android:hint="@{SignUp.confirmEmailHint}"
                                                    android:inputType="textEmailAddress"
                                                    android:text="@={SignUp.confirmEmail}"
                                                    android:textCursorDrawable="@null"
                                                    android:textSize="15sp"
                                                     app:error="@{SignUp.errorConfirmEmail}"
                                                    android:imeOptions="flagNoExtractUi"/>
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="0.8"></RelativeLayout>

                                        </LinearLayout>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="0.5"></RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="1.1">

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal"
                                            android:weightSum="9.5">

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="0.8"></RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="7.9">

                                                <EditText
                                                    android:id="@+id/passwordEditText"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_centerHorizontal="true"
                                                    android:layout_centerVertical="true"
                                                    android:background="@drawable/round_corner_edit_text"
                                                    android:drawableTint="@android:color/darker_gray"
                                                    android:longClickable="false"
                                                    android:ems="15"
                                                    android:gravity="center"
                                                    android:hint="@{SignUp.passwordHint}"
                                                    android:inputType="textPassword"
                                                    android:text="@={SignUp.userPassword}"
                                                    android:textCursorDrawable="@null"
                                                    android:textSize="15sp"
                                                    app:error="@{SignUp.errorPassword}"
                                                    android:imeOptions="flagNoExtractUi"/>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="0.8"></RelativeLayout>

                                        </LinearLayout>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="0.75"></RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="1.1">

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal"
                                            android:weightSum="9.5">

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="3"></RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="3.5">

                                                <Button
                                                    android:id="@+id/sign_up_button"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:background="@drawable/round_corner_button"
                                                    android:text="@{SignUp.nextButtonText}"
                                                    android:onClick="@{(v)->ModelClickListener.onClick()}"
                                                    android:textColor="@android:color/white" />

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dip"
                                                android:layout_height="fill_parent"
                                                android:layout_weight="3"></RelativeLayout>

                                        </LinearLayout>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="0.75"></RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5"></LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="2"></LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>